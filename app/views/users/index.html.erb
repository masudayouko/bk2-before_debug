<h2>User info</h2>
<%= render 'users/profile', user: current_user %>

<h2>New book</h2>
<%= render 'books/newform', book: @book %>
<div class="col-xs-9">

<h2>Users</h2>
<!--users一覧 -->
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag(user, :profile_image, :fill, 40, 40, fallback: "no-image-mini.jpg",size: "60x60) %></td>
			<td><%= user.name %></td>
			<td><%= link_to "Show", user_path(user.id), class: "user_#{user.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
<!--users一覧 -->

