
<div class="col-xs-11">

<h2>Follow Users</h2>
<!--users一覧 -->
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag(user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size: "60x60") %></td>
			<td><%= user.name %></td>

			<td>フォロー数:<%= user.followings.count %></td>
			<td>フォロワー数:<%= user.followers.count %></td>

			<td><%= link_to "Show", user_path(user.id)%></td>
		</tr>
		<% end %>
	</tbody>
</table>

</div>
</div>
<!--users一覧 -->

